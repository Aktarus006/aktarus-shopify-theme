<div class="w-full px-3 py-6">
  <div class="overflow-hidden rounded-lg border shadow-lg">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            src="{{ product_product.featured_image.src | image_url: width: 600 }}"
            class="h-full w-full object-cover"
            alt="{{ product_product.featured_image.alt | escape }}"
            width="600"
            height="600"
          >
        </div>
      {% else %}
        {{ 'product-2' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
      {% endif %}
    </a>
    <div class="flex flex-col bg-gray-800 p-4">
      <span x-show="section_product.settings.show_product_vendor" class="text-sm text-gray-400">
        {{- product_product.vendor -}}
      </span>
      <a href="{{ product_product.url }}" class="font-medium text-gray-300 uppercase">{{ product_product.title }}</a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>
  </div>
</div>
