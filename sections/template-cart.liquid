{% if cart.item_count > 0 %}
  <div class="p-4">
    <div class="mx-auto my-10 flex max-w-6xl flex-col">
      <div class="my-5 flex items-end justify-between">
        <h1 class="text-3xl">Your cart</h1>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="hover-text-blue-800 font-medium text-blue-600 underline"
          >Continue Shopping</a
        >
      </div>
    </div>
    <div class="mx-auto my-10 flex max-w-6xl flex-col">
      <form
        action="{{ routes.cart_url }}"
        method="POST"
        novalidate
      >
        <table class="my-4 w-full table-auto divide-y divide-gray-200">
          <thead>
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Product</th>
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Quantity</th>
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Total Price</th>
          </thead>
          <tbody>
            {% for item in cart.items %}
              <tr class="table-row">
                <td class="flex flex-col justify-center px-2 py-4">
                  <a href="{{ item.url }}">
                    {% if item.image %}
                      <img
                        src="{{ item.image | image_url: width: 150 }}"
                        alt="{{ item.title | escape }}"
                        class="h-20 w-20 border object-cover"
                        width="150"
                        height="150"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                    {% endif %}
                  </a>
                </td>
                <td class="flex flex-col justify-center px-2 py-4">
                  <a href="{{ item.url }}" class="my-1">{{ item.product.title | truncatewords: 5 }}</a>
                  <span class="my-1 text-sm text-gray-500">{{ item.variant.title }}</span>
                  <a
                    href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                    class="my-1 text-sm font-medium text-red-500"
                    >Remove</a
                  >
                </td>
                <td class="px-2 py-4">
                  <input
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="1"
                    id="updates-{{ forloop.index }}"
                    class="w-20 border p-2"
                  >
                </td>
                <td class="px-2 py-4">
                  {{ item.line_price | money }}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        <div class="flex flex-col items-center justify-between md:flex-row">
          <div class="my-4 w-full">
            <div class="flex flex-col items-start">
              <label for="cart_notes" class="my-1">Cart notes</label>
              <textarea
                name="note"
                id="cart_notes"
                class="h-20 w-full resize-none border md:max-w-lg"
              ></textarea>
            </div>
          </div>
          <div class="my-4 w-full md:w-80">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'subtotal' %}
                  <h3 class="text-xl">Subtotal: {{ cart.total_price | money }}</h3>
                {% when 'update_button' %}
                  <div class="my-2">
                    <button
                      type="submit"
                      name="update"
                      class="w-full border border-gray-600 p-3 font-medium text-gray-600 hover:bg-gray-600 hover:text-white"
                    >
                      Update
                    </button>
                  </div>
                {% when 'checkout_button' %}
                  <div class="my-2">
                    <button
                      type="submit"
                      name="checkout"
                      class="w-full border border-gray-600 bg-gray-600 p-3 font-medium text-white"
                    >
                      Checkout
                    </button>
                  </div>
                {% else %}

              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </form>
    </div>
  </div>
{% else %}
  <div class="mx-auto my-4 flex h-60 max-w-6xl items-center justify-center">
    <div class="text-center">
      <h1 class="my-4 text-3xl">Your cart is empty</h1>
      <div class="my-4 py-4">
        <a
          href="{{ routes.all_products_collection_url }}"
          class="border border-gray-600 bg-gray-600 px-8 py-3 text-white"
          >Continue Shopping</a
        >
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
{
  "name": "Template Cart",
  "blocks": [
    {
      "type": "subtotal",
      "name": "Subtotal",
      "limit": 1
    },
    {
      "type": "update_button",
      "name": "Update Button",
      "limit": 1
    },
    {
      "type": "checkout_button",
      "name": "Checkout Button",
      "limit": 1
    }
  ]
}
{% endschema %}
