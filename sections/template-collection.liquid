<div class="px-4 py-8">
  <a href="{{ routes.collections_url }}" class="my-4 block text-center text-base text-gray-500 hover:underline">
    Go back to collections
  </a>
  {% paginate collection.products by section.settings.number_of_products_per_page %}
    <h1 class="text-center text-3xl">{{ collection.title }}</h1>
    <div class="mx-auto max-w-6xl">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
        {% for product in collection.products %}
          {% render 'product-card', product_product: product, section_product: section %}
        {% else %}
          <p>no matches</p>
        {% endfor %}
      </div>
    </div>
    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>
{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "default": 3,
      "label": "Number of products per page"
    },
    {
      "type": "checkbox",
      "id": "show_product_vendor",
      "label": "Show product vendor",
      "default": false
    }
  ]
}
{% endschema %}
