<div class="flex h-full items-center justify-center px-6 py-12 md:px-4 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h1 class="mt-6 text-center text-3xl font-bold">Sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 px-4 py-3 text-red-700" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email_address" class="sr-only">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full border px-3 py-2"
            placeholder="Email address"
          >
        </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label for="password" class="sr-only">Password </label>
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="current-password"
              class="relative block w-full border px-3 py-2"
              placeholder="Password"
            >
          </div>
        {% endif %}
        <div>
          <button
            type="submit"
            class="relative w-full bg-gray-600 px-4 py-2 text-sm font-medium text-white hover:bg-gray-900"
          >
            Sign in
          </button>
        </div>
      {% endform %}
    </div>
  </div>
  <div class="w-full max-w-md space-y-8"></div>
</div>
