{% assign main_menu_linklist = linklists[section.settings.menu].links %}
<div x-data="{ mobileMenuOpen: false, searchBarOpen: false }" class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start truncate lg:flex-1">
        <h1 class="truncate text-xl font-bold">{{ section.settings.mobile_menu_title }}</h1>
      </div>

      <div class="-my-2 -mr-2 ml-3 md:hidden">
        <button
          @click="mobileMenuOpen = true"
          type="button"
          class="inline-flex items-center justify-center bg-white p-2 focus:outline-none"
        >
          {% render 'icon-menu' %}
        </button>
      </div>
      <!-- NAVIGATION MENU -->
      <nav x-data="{ open: false }" class="hidden space-x-10 md:flex">
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            <div class="relative">
              <button
                type="button"
                @click="open = ! open"
                class="inline-flex items-center text-base text-gray-500 hover:text-gray-900"
              >
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>
              <div
                x-show="open"
                @click.away="open = false"
                class="absolute z-10 mt-5 -ml-5 w-screen max-w-md transform px-2 sm:px-0 lg:left-1/2 lg:ml-0 lg:-translate-x-1/2"
              >
                <div class="ring-opacity-5 overflow-hidden rounded-lg border shadow-lg ring-black">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    <!-- CREATE THE SUBLINK -->
                    {% for childlink in link.links %}
                      <a href="{{ childlink.url }}" class="-m-3 flex items-start rounded-lg p-3 hover:bg-gray-100">
                        <div class="ml-4">
                          <p class="text-base font-medium text-gray-900">
                            {{ childlink.title }}
                          </p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div class="relative">
              <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">{{ link.title }}</a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>

      <div class="hidden items-center justify-end space-x-5 md:flex md:flex-1">
        <button
          x-on:click="searchBarOpen = true"
          type="button"
          class="text-base whitespace-nowrap text-gray-500 hover:text-gray-900"
        >
          {% render 'icon-search' %}
        </button>
        <a href="{{ routes.cart_url }}" class="text-base whitespace-nowrap text-gray-500 hover:text-gray-900">
          {% render 'icon-shopping-bag' %}
        </a>

        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
          <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
        {% endif %}
      </div>
    </div>
  </div>
  <div x-show="mobileMenuOpen" class="absolute inset-x-0 top-0 z-10 origin-top-left transform p-2 md:hidden">
    <div class="ring-opacity-5 w-full rounded-lg bg-white shadow-lg ring-1 ring-black">
      <div class="divide-y-2 divide-gray-50 p-5">
        <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">{{ section.settings.mobile_menu_title }}</h1>
          </div>
          <div class="-mr-2">
            <button
              @click="mobileMenuOpen = false"
              type="button"
              class="rounded-md bg-white p-2 text-gray-500"
            >
              {% render 'icon-close' %}
            </button>
          </div>
        </div>

        <!-- NAVIGATION LINKS FOR MOBILE MENU -->
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in main_menu_linklist %}
              {% assign link_handle = link.handle | replace: '-', '_' %}
              {% if link.links != blank %}
                <div x-data="{ {{ link_handle }}: false }" class="relative">
                  <button
                    @click="{{ link_handle }} = !{{ link_handle }}"
                    type="button"
                    class="flex w-full items-center justify-between text-base text-gray-500 hover:text-gray-900"
                  >
                    <div>{{ link.title }}</div>
                    {% render 'icon-dropdown' %}
                  </button>
                  <div x-show="{{ link_handle }}" class="grid gap-y-7 py-3">
                    {% for childlink in link.links %}
                      <a
                        href="{{ childlink.url }}"
                        class="-m-3 mt-2 flex items-center rounded-md p-3 text-gray-500 hover:bg-gray-50 hover:text-gray-900"
                      >
                        <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% else %}
                <a
                  href="{{ link.url }}"
                  class="-m-3 flex items-center rounded-md p-3 text-gray-500 hover:bg-gray-50 hover:text-gray-900"
                >
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div x-show="searchBarOpen" @click.away="searchBarOpen = false" class="absolute top-0 w-full border bg-white">
    <button type="button" x-on:click="searchBarOpen = false" class="absolute top-0 right-0 mt-5 mr-5 text-gray-500">
      {% render 'icon-close' %}
    </button>
    <div class="flex h-40 items-center justify-center">
      <form action="{{ routes.search_url }}" method="get" class="flex-auto">
        <div class="relative border px-10 text-gray-500">
          <input
            type="search"
            name="q"
            placeholder="Search"
            class="h-10 w-full rounded-full bg-white px-5 pr-10 text-sm focus:outline-none"
          >
          <button type="submit" class="absolute top-0 right-0 mt-2 mr-2 md:mr-20">
            {% render 'icon-search' %}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Title",
      "default": "Menu",
      "info": "This is the title of the mobile menu section."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Header Menu",
      "default": "main-menu",
      "info": "Select the menu to display in the header navigation."
    }
  ]
}
{% endschema %}
